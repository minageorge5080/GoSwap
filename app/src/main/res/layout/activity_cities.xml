<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.citiesActivity.CitiesActivity"
    android:background="#DCDEE3">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <TextView
                android:id="@+id/tv_all_gover"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="All Gover"
                android:textSize="18sp"
                android:background="#fff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:fontFamily="@font/nunito_sans_light_italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Choose City"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>