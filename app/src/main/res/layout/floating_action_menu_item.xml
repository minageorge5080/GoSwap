<?xml version="1.0" encoding="utf-8"?>
<com.github.clans.fab.FloatingActionMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuFab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:layout_marginBottom="39dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="8dp"
    fab:menu_animationDelayPerItem="55"
    fab:menu_backgroundColor="@android:color/transparent"
    fab:menu_buttonSpacing="0dp"
    fab:menu_colorNormal="@color/green"
    fab:menu_colorPressed="@color/green"
    fab:menu_colorRipple="@color/green"
    fab:menu_fab_size="normal"
    fab:menu_icon="@drawable/ic_call"
    fab:menu_labels_cornerRadius="3dp"
    fab:menu_labels_ellipsize="none"
    fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
    fab:menu_labels_margin="0dp"
    fab:menu_labels_maxLines="-1"
    fab:menu_labels_padding="8dp"
    fab:menu_labels_position="left"
    fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
    fab:menu_labels_showShadow="true"
    fab:menu_labels_singleLine="false"
    fab:menu_labels_textColor="@color/green"
    fab:menu_labels_textSize="15sp"
    fab:menu_openDirection="up"
    fab:menu_shadowRadius="4dp"
    fab:menu_shadowXOffset="1dp"
    fab:menu_shadowYOffset="4dp">

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/copyFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_content_copy"
        fab:fab_colorNormal="@color/colorPrimaryDark"
        fab:fab_label="Copy Number"
        fab:fab_size="mini"
        tools:ignore="VectorDrawableCompat" />
    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/smsFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sms"
        fab:fab_colorNormal="@color/colorPrimaryDark"
        fab:fab_label="Send SMS"
        fab:fab_size="mini"
        tools:ignore="VectorDrawableCompat" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/createContactFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_contacts"
        fab:fab_colorNormal="@color/colorPrimaryDark"
        fab:fab_label="Create Contact"
        fab:fab_size="mini"
        tools:ignore="VectorDrawableCompat" />


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/callFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call"
        fab:fab_colorNormal="@color/colorPrimaryDark"
        fab:fab_label="Call"
        fab:fab_size="mini"
        tools:ignore="VectorDrawableCompat" />

</com.github.clans.fab.FloatingActionMenu>